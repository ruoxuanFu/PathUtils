<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#1594E8">

        <TextView
            android:id="@+id/tvSave"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center|bottom|left"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text="保存"
            android:textColor="#FFFFFF"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tvClear"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center|bottom|left"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text="清除"
            android:textColor="#FFFFFF"
            android:textSize="17sp"/>

        <ImageView
            android:id="@+id/imgEraser"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center|bottom|right"
            android:padding="18dp"
            android:src="@drawable/ic_eraser"
            android:textSize="17sp"/>

        <ImageView
            android:id="@+id/imgPen"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center|bottom|right"
            android:padding="18dp"
            android:src="@drawable/ic_pen"
            android:textSize="17sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0">

        <com.example.ruoxuanfu.pathutils.PathDrawView
            android:id="@+id/pathDrawView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#FFFFFF"/>

    </RelativeLayout>

</LinearLayout>